<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:carsetting="http://schemas.android.com/apk/res/com.yecon.carsetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_set_bk"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_parent_ssid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="@string/wifi_ssid"
                android:textColor="@color/selector_color_state"
                android:textSize="@dimen/textsize_general" />

            <TextView
                android:id="@+id/wifi_connected_ssid"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:gravity="left"
                android:text="@string/wifi_ssid"
                android:textColor="@color/selector_color_state"
                android:textSize="@dimen/textsize_general" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="@string/wifi_enc"
                android:textColor="@color/selector_color_state"
                android:textSize="@dimen/textsize_general" />

            <TextView
                android:id="@+id/wifi_connected_enctype"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:gravity="left"
                android:text="@string/wifi_enc"
                android:textColor="@color/selector_color_state"
                android:textSize="@dimen/textsize_general" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dlg_btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/dialog_button_state"
            android:gravity="center"
            android:text="@string/wifi_connect"
            android:textColor="@color/selector_color_state"
            android:textSize="@dimen/textsize_general" />

        <TextView
            android:id="@+id/dlg_btn_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@xml/dialog_button_state"
            android:gravity="center"
            android:text="@string/wifi_forget"
            android:textColor="@color/selector_color_state"
            android:textSize="@dimen/textsize_general" />
    </LinearLayout>

</LinearLayout>