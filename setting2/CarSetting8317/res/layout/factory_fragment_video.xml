<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:carsetting="http://schemas.android.com/apk/res/com.yecon.carsetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:padding="@dimen/fragment_padding" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_rgb_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/factory_rgb_set" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="@string/factory_backlight_set"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_m" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_backlight_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_seekbarMax="100"
            carsetting:item_seekbarPos="80"
            carsetting:item_style="6"
            android:visibility="gone"
            carsetting:item_subTitle="@string/factory_backlight_def" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_backlight_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_seekbarMax="19"
            carsetting:item_seekbarPos="0"
            carsetting:item_style="6"
            carsetting:item_subTitle="@string/factory_backlight_low" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_backlight_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_seekbarMax="38"
            carsetting:item_seekbarPos="10"
            carsetting:item_style="6"
            carsetting:item_subTitle="@string/factory_backlight_mid" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_backlight_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_seekbarMax="21"
            carsetting:item_seekbarPos="1"
            carsetting:item_style="6"
            carsetting:item_subTitle="@string/factory_backlight_high" />
    </LinearLayout>

</ScrollView>