<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:carsetting="http://schemas.android.com/apk/res/com.yecon.carsetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:padding="@dimen/fragment_padding" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_nav_maps_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/set_nav_maps_list" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_nav_maps_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="1"
            carsetting:item_subTitle="@string/set_nav_maps_select" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_nav_volume_remix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="2"
            carsetting:item_subTitle="@string/set_nav_volume_remix" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_nav_volume_listen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            carsetting:item_style="2"
            carsetting:item_subTitle="@string/set_nav_volume_listen" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_nav_volume_media_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            carsetting:item_hintTitle="10"
            carsetting:item_style="1"
            carsetting:item_subTitle="@string/set_nav_volume_media_front" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_nav_volume_media_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            carsetting:item_hintTitle="10"
            carsetting:item_style="1"
            carsetting:item_subTitle="@string/set_nav_volume_media_back" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_nav_volume_gis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            carsetting:item_hintTitle="10"
            carsetting:item_style="1"
            carsetting:item_subTitle="@string/set_nav_volume_gis" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_nav_volume_backcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_hintTitle="10"
            carsetting:item_style="1"
            carsetting:item_subTitle="@string/set_nav_volume_backcar" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_nav_volume_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_hintTitle="10"
            carsetting:item_style="1"
            carsetting:item_subTitle="@string/set_nav_volume_bt" />
    </LinearLayout>

</ScrollView>