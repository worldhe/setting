<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_prompt_bk"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_general" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_left_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_left_bg" />

        <SeekBar
            android:id="@+id/SeekBar_id"
            android:layout_width="@dimen/factory_dlg_seekbar_width"
            android:layout_height="@dimen/headlayout_seekbar_height"
            android:max="100"
            android:maxHeight="@dimen/headlayout_seekbar_height"
            android:minHeight="@dimen/headlayout_seekbar_height"
            android:progressDrawable="@xml/headlayout_seekbar_state"
            android:thumb="@xml/headlayout_seekbar_thumb_state"
            android:thumbOffset="5px" />

        <TextView
            android:id="@+id/text_value_id"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_general" />

        <ImageView
            android:id="@+id/btn_right_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_right_bg" />
    </LinearLayout>

</LinearLayout>