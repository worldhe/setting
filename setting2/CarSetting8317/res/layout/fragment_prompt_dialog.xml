<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:carsetting="http://schemas.android.com/apk/res/com.yecon.carsetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_prompt_bk"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/selector_color_state"
        android:textSize="@dimen/textsize_general" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/dialog_button_state"
            android:gravity="center"
            android:text="@string/other_ok"
            android:textColor="@color/selector_color_state"
            android:textSize="@dimen/textsize_general" />

        <TextView
            android:id="@+id/textview_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="@xml/dialog_button_state"
            android:gravity="center"
            android:text="@string/other_cancel"
            android:textColor="@color/selector_color_state"
            android:textSize="@dimen/textsize_general" />
    </LinearLayout>

</LinearLayout>