<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:carsetting="http://schemas.android.com/apk/res/com.yecon.carsetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:padding="@dimen/fragment_padding" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_bt_call_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/factory_bt_call_gain" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_navi_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/factory_navi_gain" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_other_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/factory_other_gain" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_aux_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/factory_aux_db" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_a2dp_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/factory_a2dp_db" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_fm_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/factory_fm_db" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_am_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/factory_am_db" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/factory_tv_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/factory_tv_db" />
    </LinearLayout>

</ScrollView>