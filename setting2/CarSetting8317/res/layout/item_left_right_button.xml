<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/item_icon_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/item_right_bg"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <TextView
        android:id="@+id/item_text_middle"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/item_icon_right"
        android:gravity="center"
        android:textColor="@color/selector_color_state"
        android:textSize="@dimen/textsize_general" />

    <Button
        android:id="@+id/item_icon_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/item_text_middle"
        android:background="@drawable/item_left_bg"
        android:minHeight="0dp"
        android:minWidth="0dp" />

</RelativeLayout>