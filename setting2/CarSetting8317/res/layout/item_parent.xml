<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/selector_listview_state"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="center" />

    <TextView
        android:id="@+id/item_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_icon"
        android:gravity="center_vertical|left"
        android:textColor="@color/selector_color_state"
        android:textSize="@dimen/textsize_general" />

    <TextView
        android:id="@+id/item_hint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_parent_right"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:textColor="@color/selector_color_state"
        android:textSize="@dimen/textsize_general" />

    <LinearLayout
        android:id="@+id/item_parent_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>