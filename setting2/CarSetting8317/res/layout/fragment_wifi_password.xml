<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:carsetting="http://schemas.android.com/apk/res/com.yecon.carsetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_set_bk"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_parent_ssid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/id_parent_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="@string/wifi_ssid"
                android:textColor="@color/selector_color_state"
                android:textSize="@dimen/textsize_general" />

            <TextView
                android:id="@+id/dlg_btn_wifi_ssid"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:gravity="left"
                android:text="@string/wifi_ssid"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_general" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_parent_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="@string/wifi_password"
                android:textColor="@color/selector_color_state"
                android:textSize="@dimen/textsize_general" />

            <EditText
                android:id="@+id/dlg_edit_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/wifi_edit_bk"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/psw_input_lacagtion"
                android:textSize="@dimen/textsize_general" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/password_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:button="@xml/selector_psw_checkbox"
            android:checked="true"
            android:paddingLeft="20dp"
            android:text="@string/other_show_password"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dlg_btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/dialog_button_state"
            android:gravity="center"
            android:text="@string/wifi_connect"
            android:textColor="@color/selector_color_state"
            android:textSize="@dimen/textsize_general" />

        <TextView
            android:id="@+id/dlg_btn_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@xml/dialog_button_state"
            android:gravity="center"
            android:text="@string/other_cancel"
            android:textColor="@color/selector_color_state"
            android:textSize="@dimen/textsize_general" />
    </LinearLayout>

</LinearLayout>